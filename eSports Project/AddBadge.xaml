<Page x:Class="eSportsBadgeTracker.AddBadge"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Check In" Height="350.5" Width="521.5">

    <Grid>
        <CheckBox x:Name="chkManual" Content="" HorizontalAlignment="Left" Margin="233,238,0,0" VerticalAlignment="Top" Click="chkManual_Clicked"/>
        <Label x:Name="lblManual" Content="Manual Entry:" HorizontalAlignment="Left" Margin="124,231,0,0" VerticalAlignment="Top" Height="30" Width="108" Foreground="Black" FontWeight="Bold" FontSize="14.667" RenderTransformOrigin="0.507,0.56"/>
        <Button Style="{StaticResource AccentedSquareButtonStyle}" x:Name="btnCheckIn" Content="Add Badge" Margin="268,0,0,84" IsDefault="True" FontSize="13.333" FontWeight="Bold" Height="37" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="103" Background="#FF3F8B33" Click="btnCheckIn_Click"/>
        <TextBox x:Name="txtScanID" Margin="126,0,149,141" TextWrapping="Wrap" Height="42" VerticalAlignment="Bottom" FontSize="14" TextChanged="txtScanID_TextChanged"/>
        <Label x:Name="lblManual_Copy" Content="Please enter or scan the badge..." HorizontalAlignment="Left" Margin="124,130,0,0" VerticalAlignment="Top" Height="30" Width="233" Foreground="Black" FontWeight="Bold" FontSize="14.667" RenderTransformOrigin="0.507,0.56"/>
    </Grid>
</Page>
